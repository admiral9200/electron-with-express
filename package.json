{
    "name": "electron-with-express",
    "description": "Demonstrates spawning Express from Electron and using it to serve content",
    "version": "1.0.11",
    "main": "./dist/src/main.js",
    "icon": "./dist/favicon.ico",
    "expressPort": 3000,
    "basePath": "./dist",
    "authors": [
        "Frank Hale <frankhale@gmail.com>"
    ],
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "tsc",
        "start": "tsc && electron .",
        "pack": "tsc && cd .. && electron-packager ./electron-with-express --icon=./electron-with-express/dist/favicon.ico --ignore=\"^(?!(.*node_modules|.*dist))(.*src.*|.*screenshots.*|.*tsconfig.*|.*README.*|.*git.*)\" --asar.unpack=*.{node,dll,db} --overwrite",
        "postinstall": "electron-rebuild"
    },
    "dependencies": {
        "better-sqlite3": "^8.4.0",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "debug": "^4.3.4",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "http-errors": "^2.0.0",
        "morgan": "^1.10.0",
        "node-fetch": "^2.6.11",
        "serve-favicon": "^2.5.0"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.2.13",
        "@types/better-sqlite3": "^7.6.4",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.17",
        "@types/http-errors": "^2.0.1",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.3.2",
        "@types/node-fetch": "^2.6.4",
        "electron": "^25.2.0",
        "node-abi": "^3.45.0",
        "typescript": "^5.1.3"
    }
}
